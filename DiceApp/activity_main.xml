<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layoutDescription="@xml/activity_main_scene"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="주사위 개수를 선택하세요!"
        android:textSize="24dp">
    </TextView>

    <RadioGroup
        android:id="@+id/choicedice3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        >

            <RadioButton
                android:id="@+id/dice_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:text="주사위 1개"
                android:textSize="20dp" />

            <RadioButton
                android:id="@+id/dice_two"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:text="주사위 2개"
                android:textSize="20dp" />

            <RadioButton
                android:id="@+id/dice_three"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:text="주사위 3개"
                android:textSize="20dp" />


            <RadioButton
                android:id="@+id/dice_four"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:text="주사위 4개"
                android:textSize="20dp" />

            <RadioButton
                android:id="@+id/dice_five"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:text="주사위 5개"
                android:textSize="20dp" />

            <RadioButton
                android:id="@+id/dice_six"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:text="주사위 6개"
                android:textSize="20dp" />

    </RadioGroup>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:id="@+id/diceimage1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="20dp"
            app:srcCompat="@drawable/dice1" />

        <ImageView
            android:id="@+id/diceimage2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/dice2" />
        <ImageView
            android:id="@+id/diceimage3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/dice3" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:id="@+id/diceimage4"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:layout_marginLeft="20dp"
            app:srcCompat="@drawable/dice4" />

        <ImageView
            android:id="@+id/diceimage5"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/dice5" />

        <ImageView
            android:id="@+id/diceimage6"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:layout_marginLeft="20dp"
            app:srcCompat="@drawable/dice6" />
    </LinearLayout>

    <Button
        android:id="@+id/throwdice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="주사위 던지기"
        android:layout_marginLeft="130dp"
        android:textSize="20dp" />

</LinearLayout>